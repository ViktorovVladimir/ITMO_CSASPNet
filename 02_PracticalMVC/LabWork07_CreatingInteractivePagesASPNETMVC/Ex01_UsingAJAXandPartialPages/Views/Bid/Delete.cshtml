@model Ex01_UsingAJAXandPartialPages.Models.BidClass

@{
    ViewData["Title"] = "Удаление заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление заявки</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Удалить заявку</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreditHead)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreditHead)
