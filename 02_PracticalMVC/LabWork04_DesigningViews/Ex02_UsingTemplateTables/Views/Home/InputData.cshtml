@model Ex02_UsingTemplateTables.Models.PersonClass

@{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InputData</title>
</head>


<body>
    <h4>Person details</h4>
    <div>
        <form method="post">
            <table>
                <tr>
                    <td><p>Enter name:</p></td>
                    <td>@Html.TextBox("FirstName")</td>
                </tr>
                <tr>
                    <td><p>Enter lastname:</p></td>
                    <td>@Html.TextBoxFor(x => x.LastName)</td>
                </tr>
                <tr><td><input type="submit" class="bbutton" value="Send" /></td><td></td></tr>
            </table>
        </form>   
    </div>
</body>


</html>
