@model IEnumerable<FinalTask.Models.Discipline>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DisciplineId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DisciplineId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DisciplineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <p><a asp-controller="Home" asp-action="Index" asp->Back to Home</a></p>
</div>
