-->

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisciplineHead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dueDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach( var item in Model ) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisciplineHead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dueDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReportCardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReportCardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReportCardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<div>
    <p><a asp-controller="Home" asp-action="Index" asp->Back to Home</a></p>
</div>
